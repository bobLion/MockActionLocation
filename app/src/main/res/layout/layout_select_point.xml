<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/widget_container_length_5"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/widget_container_length_5">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_video_select_point"
            android:layout_marginLeft="@dimen/widget_container_length_15"
            android:textColor="@color/material_blue"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/font_48pt"
            />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_38pt"
            android:layout_toRightOf="@id/tv_title"
            android:layout_marginLeft="@dimen/icon_width_10"
            />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/text_view_green_shape"
            android:text="чбо шод"
            android:textColor="@color/white"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/widget_container_length_5"
        android:layout_marginLeft="@dimen/widget_container_length_5"
        android:layout_marginRight="@dimen/widget_container_length_5">
        <Spinner
            android:id="@+id/sp_province"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"/>

        <Spinner
            android:id="@+id/sp_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <Spinner
            android:id="@+id/sp_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"/>
    </LinearLayout>

</LinearLayout>
